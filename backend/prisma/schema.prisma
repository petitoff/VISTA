generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

/// Application settings - single row with id="default"
model Settings {
  id        String   @id @default("default")
  
  // CVAT Integration
  cvatUrl      String?
  cvatUsername String?
  cvatPassword String?
  cvatCacheTimeoutMs Int @default(5000)
  
  // Jenkins Integration  
  jenkinsUrl      String?
  jenkinsUsername String?
  jenkinsApiToken String?
  
  updatedAt DateTime @updatedAt
}

/// Tracks videos currently being processed by Jenkins jobs
model VideoProcessing {
  id          String   @id @default(uuid())
  videoPath   String   @unique  // hostPath of the video
  jobName     String              // Jenkins job name
  method      String              // "roi" | "direct"
  queueUrl    String?             // Jenkins queue URL
  buildUrl    String?             // Jenkins build URL (after leaving queue)
  status      String   @default("queued") // queued | building | success | failed
  startedAt   DateTime @default(now())
}
